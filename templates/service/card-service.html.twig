{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('service') }}
{% endblock %}

{% block main %}

<div class="mb-3 w-100 h-100">
    <div class="col-md-12 card-name">
        <div class="col p-4 d-flex flex-column mt-5 mb-5 m-lg-5">
            <h2 class="card-title">{{ service.service }}</h2>
            <span class="card-text mb-auto"><span class="text-muted text-block">Cost</span> <h5 class="h-cost">{{ service.price|format_currency('USD', {fraction_digit: 2}) }}</h5></span>

        </div>
    </div>
    <div class="row g-0">
        <div class="col-md-5">
            <svg class="bd-placeholder-img" width="400" height="250" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: صورة مصغرة" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em"></text></svg>
        </div>
        <div class="col-md-6">
            <div class="card-body">
                <p class="card-text text-start text-muted fs-6 w-75">{{ service.description }}</p>
            </div>
        </div>
        <div class="wrapper-card">
            <a href="{{ path('user_booking', {'id': service.id}) }}" class="btn btn-md btn-primary btn-service mt-5 image">Make Appointment</a>
        </div>
    </div>
</div>
{% endblock %}